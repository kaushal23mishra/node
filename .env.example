# Server Configuration
PORT=5001

# Database Configuration
DB_URL=mongodb://0.0.0.0:27017/your_database_name
DB_TEST_URL=mongodb://0.0.0.0:27017/your_test_database_name

# CORS Configuration
ALLOW_ORIGIN=*

# Email Configuration (Mailgun)
MAILGUN_USER=your-mailgun-user
MAILGUN_PASSWORD=your-mailgun-password

# SMS Gateway Configuration (GupShup)
SMS_USER_ID=your-sms-user-id
SMS_PASSWORD=your-sms-password

# JWT Secrets (Generate strong random strings for production)
# You can generate secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ADMIN_SECRET=your-admin-secret-here
JWT_DEVICE_SECRET=your-device-secret-here
JWT_CLIENT_SECRET=your-client-secret-here

# Default Admin Credentials (for seeding)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=change-this-password

# Default User Credentials (for seeding)
DEFAULT_USER_USERNAME=user
DEFAULT_USER_EMAIL=user@example.com
DEFAULT_USER_PASSWORD=change-this-password

# Environment
NODE_ENV=development
LOG_LEVEL=info

# JWT Secrets (Enhanced)
JWT_SECRET=your-32-character-secret-key-goes-here
JWT_EXPIRES_IN=1d

# Redis Configuration (Scalability)
REDIS_URL=redis://localhost:6379
